<%- include('../partials/header')%>
<div style="background-image: url(https://images.unsplash.com/photo-1659939341126-652948e9c5c0?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8ODF8fGVkdWNhdGlvbiUyMGJhY2tncm91bmQlMjBibGFja3xlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60);width: 100%;
height: 130%; background-repeat: no-repeat; background-size: cover; background-position: center;">
<div class="container text-light p-3"  >
    <ul class="d-flex justify-content-around list-unstyled btn btn-info p-2">
        <li><a href="/education"><button class="btn btn-secondary"> Eduaction</button></a></li> 
        <li><a href="/skill"><button class="btn btn-success">Skill</button></a></li>
        <li><a href="/project"><button class="btn btn-success">Project</button></a></li>
        <li><a href="/experience"><button class="btn btn-success">Experience</button></a></li>
        <li><a href="/interest"><button class="btn btn-success">Interest</button></a></li>
    </ul>
    <hr />
    <h1 class="text-center">ðŸ“š Add Qualifications ðŸ“š</h1>
    <form action="/add-edu" class="education mt-5 container" method="POST">
        <input type="text" placeholder="Institute Name" name="institute" class="form-control" /> <br>
        <input type="text" placeholder="Degree Name" name="degree"  class="form-control" /> <br>
        <input type="text" placeholder="University Name" name="university" class="form-control" /> <br>
        <input type="text" placeholder="Year" name="year" class="form-control" /> <br>
        <input type="text" placeholder="Grade/Percentage" name="grade" class="form-control" /><br>

        <button class="btn btn-success form-control">Add Education</button>
    </form>
    <hr />
    <div class="d-flex flex-wrap ">
        <% user.education.forEach((e, i)=> { %>
        <div class="card me-3 mb-3" style="width: 18rem">
            <div class="card-body bg-warning">
                <h5 class="card-title text-muted"><%= e.degree%></h5>
                <h6 class="card-subtitle mb-2 text-muted">
                    <%= e.institute%> - <%= e.year%> | <%= e.university%>
                </h6>
                <p class="card-text text-muted">CGPA/PERCENTAGE <%= e.grade%></p>
                <a href="/delete-edu/<%= i%>" class="card-link"><button class="btn btn-danger">Remove</button> </a>
            </div>
        </div>
        <% })%>
    </div>
</div>
</div>

