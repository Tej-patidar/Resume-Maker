        <div class="d-flex mb-3 mt-4 container w-50 p-5 border rounded">
            <div class="me-3 ">
                <img style="object-fit: cover" class="rounded-circle profilePic" height="150" width="150"
                    src="/images/<%= user.avatar%>" alt="" />
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <input class="d-none uploadImg " name="avatar" type="file" />
                    <button class=" btn btn-info">ADD NEWONE ðŸ‘¦</button>
                </form>
            </div>
            <div class="pt-3 ms-4">
                <h1 class="fs-2  text-uppercase">
                    <%= user.username%>
                </h1>
                <h3 class="fs-6 fw-light">
                    <%= user.email%>
                </h3>
                <p>
                    <small class="text-muted">
                        <a class="text-decoration-none text-dark fs-2" href="<%= user.links.linkedin%>"><i
                                class="ri-linkedin-box-fill text-light"></i></a>

                        <a class="text-decoration-none text-dark fs-2 ms-3" href="<%= user.links.github%>"><i
                                class="ri-github-fill text-light"></i></a>

                        <a class="text-decoration-none text-dark fs-2 ms-3" href="<%= user.links.behance%>"><i
                                class="ri-behance-fill text-light"></i></a>
                    </small>
                </p>
            </div>
        </div>


        <div class="container w-50 rounded border p-5">
            <form action="/update/<%= user._id%>" method="POST">
                <input class="mb-3 form-control w-75" type="text" placeholder="username" name="username"
                    value="<%= user.username%>" />
                <input class="mb-3 form-control w-75" type="email" placeholder="email" name="email"
                    value="<%= user.email%>" />

                <input class="mb-3 form-control w-75" type="text" placeholder="contact" name="contact"
                    value="<%= user.contact%>" />

                <label class="mb-1 text-center" for="">
                    <h5>Important Links </h5>
                </label>
                <input class="mb-3 form-control w-75" type="url" placeholder="https://linkedin.com" name="linkedin"
                    value="<%= user.links.linkedin%>" />
                <input class="mb-3 form-control w-75" type="url" placeholder="https://github.com" name="github"
                    value="<%= user.links.github%>" />
                <input class="mb-3 form-control w-75" type="url" placeholder="https://behance.com" name="behance"
                    value="<%= user.links.behance%>" />
                <div class="mt-3">
                    <button class="btn btn-success text-center ms-3 me-3">Update Information</button>
                    <a href="/reset-password"><button class="btn btn-primary  "> Reset Password </button></a>
                    <a href="/signout" class="btn btn-danger form-control w-75 mt-3"> Sign Out </a>
            </form>
        </div>
    </div>

